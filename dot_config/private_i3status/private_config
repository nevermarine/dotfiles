battery all {
        format = "%status %percentage %remaining"
	format_down = ""
	last_full_capacity = true
}

disk "/" {
        format = "Disk: %avail/%total"
}

load {
        format = "%1min"
}

memory {
        format = "%used/%total"
        threshold_degraded = "1G"
        format_degraded = "< %available"
}

tztime local {
        format = "%A %d-%m-%Y %H:%M:%S"
}

